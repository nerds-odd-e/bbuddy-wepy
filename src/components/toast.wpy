<template/>
<script>
  import wepy from 'wepy'
  import {connect} from 'wepy-redux'

  @connect({
    message(state) {
      return state.toast.message
    }
  }, {})

  export default class Toast extends wepy.component {
    watch = {
      message: function (newValue, oldValue) {
        if (newValue) {
          wepy.showToast({
            title: this.message,
            icon: 'success',
            duration: 1000
          })
        }
      }
    }
  }

</script>
